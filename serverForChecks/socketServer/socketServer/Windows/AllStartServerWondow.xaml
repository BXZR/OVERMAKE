<Window x:Class="socketServer.Windows.AllStartServerWondow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:socketServer.Windows"
        mc:Ignorable="d"
        Title="PDR With Smartphone" Height="433.439" Width="407.346" ResizeMode="NoResize" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid Background="#FFDADADA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Mutiple User Mode" Margin="0,0,124,16" Click="button_Click" Height="32" VerticalAlignment="Bottom" ToolTip="复数实验者分别在各自的窗口进行实验" HorizontalAlignment="Right" Width="124"/>
        <Button x:Name="button2" Content="Single User Mode" Margin="0,0,262,16" Click="button2_Click" ToolTip="单独使用者在单个窗口进行实验" HorizontalAlignment="Right" Width="119" Height="32" VerticalAlignment="Bottom"/>
        <Label x:Name="theShowLabel" Content="information" Margin="20,138,20,59" Background="#FFF3F3F3" Foreground="#FF1207FF" HorizontalContentAlignment="Center"/>
        <Label x:Name="theShowLabel_Copy" Content="PDR With Smartphone" Margin="61,10,41,0" Background="{x:Null}" Foreground="#FF1207FF" HorizontalContentAlignment="Center" FontWeight="Bold" Height="34" VerticalAlignment="Top" FontSize="16"/>
        <GroupBox x:Name="groupBox" Header="Basic Config" Margin="10,44,10,0" VerticalAlignment="Top" Height="89">
            <Grid Margin="-1,2,-1,-4">
                <TextBox x:Name="ALLIP" Height="23" Margin="8,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="174"/>
                <Label x:Name="theShowLabel_Copy1" Content="ServerIP" Margin="8,10,0,0" Background="{x:Null}" Foreground="#FF1207FF" HorizontalContentAlignment="Center" FontWeight="Bold" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="81"/>
                <Label x:Name="theShowLabel_Copy2" Content="ServerPort" Margin="223,10,0,0" Background="{x:Null}" Foreground="#FF1207FF" HorizontalContentAlignment="Center" FontWeight="Bold" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="85"/>
                <TextBox x:Name="ALLPort" Height="23" Margin="221,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="128"/>
                <Button x:Name="button1" Content="Get Local IP" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="81" Click="button1_Click" Height="20" FontSize="10"/>
            </Grid>
        </GroupBox>
        <Button x:Name="button3" Content="Settings" Margin="0,0,20,16" Click="button3_Click" HorizontalAlignment="Right" Width="95" Height="32" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
