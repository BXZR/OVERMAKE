<Window x:Class="socketServer.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:socketServer"
        mc:Ignorable="d"
        Title="Settings" Height="489.393" Width="481.653" Background="#FFF3F3F3" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid x:Name="GRID" Margin="0,0,4,9" Height="438" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button
            Width="107" VerticalAlignment="Bottom" x:Name="saveQuit" Margin="173,0,0,1" Height="22" HorizontalAlignment="Left" Content="save and quit" Click="button_Click_1"/>
        <Button
            Width="107" VerticalAlignment="Bottom" x:Name="saveRestartButton" Margin="311,0,0,1" Loaded="saveRestart_Loaded" Height="22" HorizontalAlignment="Left" Content="save and restart" Click="button_Copy_Click"/>
        <Button x:Name="button" Content="Flash" HorizontalAlignment="Left" Margin="23,0,0,1" Width="108" Click="button_Click" Height="22" VerticalAlignment="Bottom"/>
        <TabControl x:Name="tabControl" Height="380" VerticalAlignment="Top">
            <TabItem Header="System Config">
                <Grid Background="#FFE5E5E5" Height="347" VerticalAlignment="Top">
                    <Label x:Name="Tip" Margin="20,28,0,0" Foreground="Red" Content="服务器未开启，可以设置后直接开启。" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="619"/>
                    <TextBox x:Name="ServerIPText" HorizontalAlignment="Left" Height="23" Margin="92,62,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="207"/>
                    <Label x:Name="label" Content="ServerIP" HorizontalAlignment="Left" Margin="20,62,0,0" Width="67" Height="31" VerticalAlignment="Top"/>
                    <Label x:Name="label_Copy22" Content="ServerPort" HorizontalAlignment="Left" Margin="20,98,0,0" Width="113" RenderTransformOrigin="2.363,-0.692" Height="31" VerticalAlignment="Top"/>
                    <TextBox x:Name="ServerPortText" HorizontalAlignment="Left" Margin="92,100,0,0" TextWrapping="Wrap" Text="TextBox" Width="207" Height="23" VerticalAlignment="Top"/>
                    <CheckBox x:Name="Draw_route_with_buffer" Content="Draw route with buffer" HorizontalAlignment="Left" Margin="20,134,0,0" VerticalAlignment="Top" IsChecked="True" Height="16" Width="148"/>
                </Grid>
            </TabItem>
            <TabItem Header="Step Dection">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="label_Copy2" Content="ZeroCross StepDection's ZeroLine" HorizontalAlignment="Left" Margin="9,38,0,0" VerticalAlignment="Top" Height="26" Width="207"/>
                    <TextBox x:Name="ZeroLine" Height="23" Margin="233,38,25,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Heading">
                <Grid Background="#FFE5E5E5" Margin="0,2,0,-1">
                    <Label
                        Width="94" VerticalAlignment="Top" RenderTransformOrigin="0.872,-5.077" x:Name="label_Copy21" Margin="20,26,0,0" Height="26" HorizontalAlignment="Left" Content="HeadingOffset"/>
                    <TextBox
                        VerticalAlignment="Top" Text="TextBox" TextWrapping="Wrap" x:Name="packageOffset" Margin="136,26,29,0" Height="23"/>
                    <CheckBox x:Name="UseOffSet" Content="UseHeadingOffset" HorizontalAlignment="Left" Margin="20,72,0,0" VerticalAlignment="Top" Width="227"/>
                </Grid>
            </TabItem>
            <TabItem Header="StepLength">
                <Grid Background="#FFE5E5E5" Margin="0,2,0,0">
                    <Label
                        Width="187" VerticalAlignment="Top" x:Name="AminusWeight" Margin="0,131,0,0" Height="26" HorizontalAlignment="Left" Foreground="#FF7400FF" Content="Weight For Weinberg Method"/>
                    <TextBox
                        Text="TextBox" TextWrapping="Wrap" x:Name="Aminus" Margin="192,134,10,186"/>
                    <Label
                        Width="187" VerticalAlignment="Top" x:Name="AminusWeight_Copy" Margin="0,10,0,0" Height="26" HorizontalAlignment="Left" Foreground="#FF7400FF" Content="Weight For Stature Method"/>
                    <Label
                        Width="115" VerticalAlignment="Top" x:Name="label_Copy3" Margin="8,42,0,0" Height="26" HorizontalAlignment="Left" Content="Stature for people"/>
                    <TextBox
                        VerticalAlignment="Top" Text="TextBox" TextWrapping="Wrap" x:Name="Stature" Margin="137,43,10,0" Height="23"/>
                    <Label
                        Width="103" VerticalAlignment="Top" x:Name="label_Copy4" Margin="8,71,0,0" Height="26" HorizontalAlignment="Left" Content="Weight for male"/>
                    <Label
                        Width="114" VerticalAlignment="Top" x:Name="label_Copy5" Margin="8,100,0,0" Height="26" HorizontalAlignment="Left" Content="Weight for female"/>
                    <TextBox
                        VerticalAlignment="Top" Text="TextBox" TextWrapping="Wrap" x:Name="MailWeight" Margin="137,73,10,0" Height="23"/>
                    <TextBox
                        VerticalAlignment="Top" Text="TextBox" TextWrapping="Wrap" x:Name="FemailWeight" Margin="137,103,10,0" Height="23"/>
                    <CheckBox
                        Width="78" VerticalAlignment="Top" x:Name="isMaleCheckc" Margin="507,15,0,0" IsChecked="True" Height="16" HorizontalAlignment="Left" Content="IsMale"/>
                    <Label
                        Width="187" VerticalAlignment="Top" x:Name="ScarletWeight" Margin="0,163,0,0" Height="26" HorizontalAlignment="Left" Foreground="#FF7400FF" Content="Weight For Scarlet Method"/>
                    <TextBox
                        Text="TextBox" TextWrapping="Wrap" x:Name="Scarlet" Margin="192,166,10,157"/>
                    <Label
                        Width="187" VerticalAlignment="Top" x:Name="ScarletWeight_Copy" Margin="0,194,0,0" Height="26" HorizontalAlignment="Left" Foreground="#FF7400FF" Content="Weight For Kim Method"/>
                    <TextBox
                        Text="TextBox" TextWrapping="Wrap" x:Name="Kim" Margin="192,197,10,126"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
